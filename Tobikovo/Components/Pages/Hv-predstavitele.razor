@page "/hv-predstavitele"

<PageTitle>Představitelé</PageTitle>

<section>
    <h1 class="verybig">Představitelé</h1>
    <ul class="grid">
        <a href="hv-smetana">
        <li class="grid-item">
            <h3>Bedřich Smetana</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openSmetana()">Otevřít</button>
            </div>
        </li></a>
        <a href="hv-dvorak">
        <li class="grid-item">
            <h3>Antonín Dvořák</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openDvorak()">Otevřít</button>
            </div>
        </li></a>
        <a href="hv-chopin">
        <li class="grid-item">
            <h3>Fryderyk Chopin</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openChopin()">Otevřít</button>
            </div>
        </li></a>
        <a href="hv-janacek">
        <li class="grid-item">
            <h3>Leoš Janáček</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openJanacek()">Otevřít</button>
            </div>
        </li></a>
    </ul>
</section>

<script>
    function openSmetana() {
        window.location.href = "hv-smetana"
    }
</script>
<script>
    function openDvorak() {
        window.location.href = "hv-dvorak"
    }
</script>
<script>
    function openChopin() {
        window.location.href = "hv-chopin"
    }
</script>
<script>
    function openJanacek() {
        window.location.href = "hv-janacek"
    }
</script>
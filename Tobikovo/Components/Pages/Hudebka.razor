@page "/hudebka"

<PageTitle>Hudební výchova</PageTitle>

<section>
    <h1 class="verybig">Hudební výchova</h1>
    <ul class="grid">
        <li class="grid-item">
            <h3>Teorie a základy</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openTeorie()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Představitelé</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openPredstavitele()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Hudební nástroje</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openNastroje()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Písně</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openPisne()">Otevřít</button>
            </div>
        </li>
    </ul>
</section>

<script>
    function openTeorie() {
        window.location.href = "hv-teorie"
    }
</script>
<script>
    function openPredstavitele() {
        window.location.href = "hv-predstavitele"
    }
</script>
<script>
    function openNastroje() {
        window.location.href = "hv-nastroje"
    }
</script>
<script>
    function openPisne() {
        window.location.href = "hv-pisne"
    }
</script>
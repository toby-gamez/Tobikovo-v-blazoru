@page "/ml-cislovky"

<PageTitle>Číslovky</PageTitle>

<section>
    <h1 class="verybig">Číslovky</h1>
    <ul class="grid">
        <li class="grid-item">
            <h3>Určování</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openUrcovani()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Dva, oba</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openObaDva()">Otevřít</button>
            </div>
        </li>
    </ul>
</section>

<script>
    function openUrcovani() {
        window.location.href = "ml-urcovani-prid";
    }
</script>
<script>
    function openObaDva() {
        window.location.href = "ml-oba-dva";
    }
</script>
@page "/hv-teorie"

<PageTitle>Teorie a základy</PageTitle>

<section>
    <h1 class="verybig">Teorie a základy</h1>
    <ul class="grid">
        <li class="grid-item">
            <h3>Jména not</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openJmena()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Složení noty</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openSlozeni()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Takty a předznamenání</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openTakty()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Znaménka síly</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openZnamenka()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Přehled not a pomlk</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button2" onclick="openNotyAPomlky()">Otevřít</button>
            </div>
        </li>
        <li class="grid-item">
            <h3>Zpěvní hlasy</h3>
            <div class="grid-content">
                <button type="button" class="ripple-button" onclick="openHlasy()">Otevřít</button>
            </div>
        </li>
    </ul>
</section>

<script>
    function openJmena() {
        window.location.href = "hv-jmena-not"
    }
</script>
<script>
    function openSlozeni() {
        window.location.href = "hv-slozeni-noty"
    }
</script>
<script>
    function openTakty() {
        window.location.href = "hv-takty"
    }
</script>
<script>
    function openZnamenka() {
        window.location.href = "hv-znamenka-sily"
    }
</script>
<script>
    function openNotyAPomlky() {
        window.location.href = "hv-noty-pomlky"
    }
</script>
<script>
    function openHlasy() {
        window.location.href = "hv-hlasy"
    }
</script>